{
  "name": "streamhub",
  "version": "1.0.0",
  "description": "Sistema de streaming unidireccional con chat en tiempo real usando WebRTC y Pub/Sub",
  "main": "dist/server/index.js",
  "scripts": {
    "build": "tsc",
    "dev:server": "ts-node src/server/index.ts",
    "dev:client": "ts-node src/clients/client.ts",
    "start:server": "node dist/server/index.js",
    "start:client": "node dist/clients/client.js",
    "clean": "rmdir /s /q dist 2>nul || echo Cleaned"
  },
  "keywords": [
    "webrtc",
    "streaming",
    "pubsub",
    "typescript",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "express": "^4.18.2",
    "uuid": "^9.0.1"
  },
  "optionalDependencies": {
    "wrtc": "^0.4.7"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
